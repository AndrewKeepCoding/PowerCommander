<Page
    x:Class="PowerCommander.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:PowerCommander.Models"
    xmlns:helpers="using:PowerCommander.Helpers"
    xmlns:winui="using:WinUICommunity"
    mc:Ignorable="d">

    <Page.Resources>
        <DataTemplate x:DataType="models:SettingsItem" x:Key="SettingsCardTemplate">
            <winui:SettingsCard Header="{x:Bind Title, Mode=OneWay}"  IsActionIconVisible="{x:Bind HasActionIcon, Mode=OneWay}" IsEnabled="{x:Bind IsEnable, Mode=OneWay}" IsClickEnabled="{x:Bind IsClickEnable, Mode=OneWay}">
                <winui:SettingsCard.HeaderIcon>
                    <FontIcon Glyph="{x:Bind Icon, Mode=OneWay}" FontFamily="{ThemeResource SymbolThemeFontFamily}" />
                </winui:SettingsCard.HeaderIcon>
                <winui:SettingsCard.Description>
                    <TextBlock Text="{x:Bind Description, Mode=OneWay}" ToolTipService.ToolTip="{x:Bind Description, Mode=OneWay}" MaxLines="2" Style="{StaticResource CaptionTextBlockStyle}" />
                </winui:SettingsCard.Description>
                <ToggleSwitch IsOn="{x:Bind ToggleSwitchState, Mode=TwoWay}" OffContent="" OnContent="" />
            </winui:SettingsCard>
        </DataTemplate>
        <DataTemplate x:Key="SettingsExpanderTemplate" x:DataType="models:SettingsItem">
            <winui:SettingsExpander Header="{x:Bind Title}" Description="{x:Bind Description}" IsExpanded="{x:Bind IsExpanded}" IsEnabled="{x:Bind IsEnable}" HeaderIcon="{x:Bind Icon}">
                <ItemsControl ItemsSource="{x:Bind SettingsExpanderItem}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <winui:SettingsCard CornerRadius="0" BorderThickness="0,1,0,0" Padding="60,20,20,20">
                                <winui:SettingsCard.Description>
                                    <TextBlock Text="{Binding Description, Mode=OneWay}" ToolTipService.ToolTip="{Binding Description, Mode=OneWay}" MaxLines="2" Style="{StaticResource CaptionTextBlockStyle}" />
                                </winui:SettingsCard.Description>
                                <winui:SettingsCard.HeaderIcon>
                                    <FontIcon Glyph="{Binding Icon}" FontFamily="{ThemeResource SymbolThemeFontFamily}" />
                                </winui:SettingsCard.HeaderIcon>
                                <CheckBox HorizontalAlignment="Right" IsChecked="{Binding ToggleSwitchState, Mode=TwoWay}" />
                            </winui:SettingsCard>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </winui:SettingsExpander>
        </DataTemplate>

        <helpers:SettingsTemplateSelector
            x:Key="SettingsElementTemplateSelector"
            SettingsCardTemplate="{StaticResource SettingsCardTemplate}"
            SettingsExpanderTemplate="{StaticResource SettingsExpanderTemplate}"
            />

    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>

            <!-- Title Bar Row -->
            <RowDefinition Height="38" />

            <!-- Main Content Row -->
            <RowDefinition Height="*" />

            <!-- Bottom Bar Row -->
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- TitleBar -->
        <Grid x:Name="AppTitleBar" Canvas.ZIndex="1" Grid.Row="0" Margin="10,0,0,0" >
            <Image Source="/Assets/WindowIcon.ico" HorizontalAlignment="Left" Width="24" Height="24" />
            <TextBlock Text="PowerCommander" FontWeight="SemiBold" Margin="38,0,0,0" VerticalAlignment="Center" TextWrapping="NoWrap" Style="{StaticResource CaptionTextBlockStyle}" />
        </Grid>

        <!-- Main Content Grid -->
        <Grid Grid.Row="1">
            <Grid Margin="15,10,15,0" Padding="10" VerticalAlignment="Top">
                <!-- Recommend Actions -->
                <StackPanel Orientation="Horizontal" Spacing="0" >
                    <Button  ToolTipService.ToolTip="Apply Recommended Tweaks">
                        <SymbolIcon Symbol="DockBottom" />
                    </Button>
                </StackPanel>

                <!-- Settings -->
                <Button  HorizontalAlignment="Right">
                    <SymbolIcon Symbol="Setting" />
                </Button>
            </Grid>

            <StackPanel>
                <!-- About your pc -->
                <ListView Margin="{StaticResource NavigationViewPageContentMargin}" IsItemClickEnabled="False" SelectionMode="None" ItemsSource="{x:Bind ViewModel.AboutYourPC, Mode=OneWay}"
                          ItemTemplateSelector="{StaticResource SettingsElementTemplateSelector}">
                    <ListView.Header>
                        <winui:SimpleSettingsGroup Header="About your pc" Margin="20,0,0,0" />
                    </ListView.Header>
                </ListView>

                <!-- Power -->
                <ListView IsItemClickEnabled="False" SelectionMode="None" ItemsSource="{x:Bind ViewModel.Power, Mode=OneWay}"
                          ItemTemplateSelector="{StaticResource SettingsElementTemplateSelector}">
                    <ListView.Header>
                        <winui:SimpleSettingsGroup Header="Power" Margin="20,0,0,0" />
                    </ListView.Header>
                </ListView>
            </StackPanel>

        </Grid>

        <!-- Bottom Bar -->
        <Grid Background="{ThemeResource CardBackgroundFillColorDefault}" Grid.Row="2" Padding="20" BorderBrush="{ThemeResource CardStrokeColorDefault}" BorderThickness="0,1,0,0">
            <Grid.ColumnDefinitions>
                <!-- Left Side -->
                <ColumnDefinition Width="Auto" />

                <!-- Left Side Centered -->
                <ColumnDefinition Width="Auto" />

                <!-- Right Side -->
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Left Side -->
            <PersonPicture PreferSmallImage="True" Width="50" HorizontalAlignment="Left" />

            <!-- Left Side Centered -->
            <StackPanel Orientation="Vertical" VerticalAlignment="Center" Grid.Column="1" Margin="10,0,0,0">
                <TextBlock Text="SkullDeath" FontWeight="SemiBold" IsColorFontEnabled="True" Foreground="CornflowerBlue" />
                <TextBlock Text="CurrentEmail@gmail.com" Style="{StaticResource CaptionTextBlockStyle}" FontSize="12" />
            </StackPanel>

            <!-- Right Side -->
            <Button Grid.Column="2" HorizontalAlignment="Right" Content="Run Scripts" FontWeight="SemiBold" Style="{StaticResource AccentButtonStyle}" />
        </Grid>
    </Grid>

</Page>
